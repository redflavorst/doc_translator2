# .env.example
# 환경 변수 설정 예시 파일
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# API 서버 설정
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# 워크플로우 설정
WORKFLOW_STATE_DIR=./workflow_states
MAX_RETRY_COUNT=3
RETRY_DELAY_SECONDS=5
AUTO_CLEANUP_DAYS=7
MAX_CONCURRENT_WORKFLOWS=3

# 레이아웃 분석 설정
USE_GPU=false
BATCH_SIZE=1
CONFIDENCE_THRESHOLD=0.5

# 번역 설정
OLLAMA_BASE_URL=http://localhost:11434
TRANSLATION_MODEL=qwen3:8b
TRANSLATION_TEMPERATURE=0.1
MAX_TOKENS=2048
QUALITY_THRESHOLD=0.6

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log